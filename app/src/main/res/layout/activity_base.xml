<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    //状态栏的内容

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#BC2923"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/foodlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:text="123智能点餐收银系统"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Baseactivity_tabs_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:text="今日台数:12"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Baseactivity_people_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="人数：4"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Baseactivity_all_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="营业额：16.00"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Baseactivity_true_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:text="实收：10.00"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:onClick="refresh"
                android:padding="2dp"
                android:text="刷新"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:onClick="superManager"
                android:text="超级管理员"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Baseactivity_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="quit"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>