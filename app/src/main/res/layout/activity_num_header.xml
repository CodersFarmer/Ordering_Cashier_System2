<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.HeyGuo.android.ui.activity.MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_shape_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="开桌"
                android:textColor="#000000"
                android:textSize="30dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="就餐人数："
                android:textColor="#000000"
                android:textSize="30dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edittext_shape_white" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="2"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="3"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="4"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="5"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="6"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="7"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="8"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="9"
                android:textSize="15dp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:text="10"
                android:textSize="15dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/bt_num_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/bt_num_cancel"
                android:background="@drawable/edittext_shape_blue"
                android:text="确认开桌"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bt_num_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_shape_white"
                android:text="取消"
                android:textColor="#000000" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>