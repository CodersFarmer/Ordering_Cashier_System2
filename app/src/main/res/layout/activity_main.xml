<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.HeyGuo.android.ui.activity.MainActivity">
    //选择就餐人数的布局
    <include
        android:id="@+id/ll_activity_num_header"
        layout="@layout/activity_num_header"
        android:visibility="gone" />
    //订单情况的布局
    <include
        android:id="@+id/ll_activity_order_data"
        layout="@layout/activity_order_data"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_acticity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        //主页的内容
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.HeyGuo.android.widget.HorizontalListView
            android:id="@+id/hl_tab01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="gone">
        </com.HeyGuo.android.widget.HorizontalListView>

        <com.HeyGuo.android.widget.HorizontalListView
            android:id="@+id/hl_tab02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="gone">
        </com.HeyGuo.android.widget.HorizontalListView>

        <GridView
            android:visibility="visible"
            android:id="@+id/gv_activity_tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:horizontalSpacing="10dp"
            android:numColumns="4"
            android:verticalSpacing="10dp">

        </GridView>
    </LinearLayout>
</FrameLayout>